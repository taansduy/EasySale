<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity_of_MoreComponent.AddProduct">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#039BE5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/Back"
                android:layout_weight="2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:layout_weight="10"
                android:textSize="20dp"
                android:text="Thêm sản phẩm"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/Search"
                android:layout_weight="2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/yes"/>
        </LinearLayout>



    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ECE4E4"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:background="#FFFF">
            <ImageView
                android:src="@drawable/camera"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/Image"/>
        </LinearLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/typeWrapper"
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusableInTouchMode="true"
            android:hint="Loại"
            android:textColorHint="@color/com_facebook_button_background_color_disabled"
            android:theme="@style/TextInputLayoutAppearance"
            app:boxStrokeColor="@color/black">

            <EditText
                android:id="@+id/type"
                style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:inputType="textEmailAddress"
                android:textColor="@color/black" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/productWrapper"
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusableInTouchMode="true"
            android:hint="Tên sản phẩm"
            android:textColorHint="@color/com_facebook_button_background_color_disabled"
            android:theme="@style/TextInputLayoutAppearance"
            app:boxStrokeColor="@color/black">

            <EditText
                android:id="@+id/product"
                style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:inputType="textEmailAddress"
                android:textColor="@color/black" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/amountWrapper"
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusableInTouchMode="true"
            android:hint="Mô tả"
            android:textColorHint="@color/com_facebook_button_background_color_disabled"
            android:theme="@style/TextInputLayoutAppearance"
            app:boxStrokeColor="@color/black">

            <EditText
                android:id="@+id/amount"
                style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:inputType="textEmailAddress"
                android:textColor="@color/black" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/costPriceWrapper"
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusableInTouchMode="true"
            android:hint="Mô tả"
            android:textColorHint="@color/com_facebook_button_background_color_disabled"
            android:theme="@style/TextInputLayoutAppearance"
            app:boxStrokeColor="@color/black">

            <EditText
                android:id="@+id/costPrice"
                style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:inputType="textEmailAddress"
                android:textColor="@color/black" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/producerWrapper"
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusableInTouchMode="true"
            android:hint="Mô tả"
            android:textColorHint="@color/com_facebook_button_background_color_disabled"
            android:theme="@style/TextInputLayoutAppearance"
            app:boxStrokeColor="@color/black">

            <EditText
                android:id="@+id/producer"
                style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:inputType="textEmailAddress"
                android:textColor="@color/black" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/salePriceWrapper"
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusableInTouchMode="true"
            android:hint="Mô tả"
            android:textColorHint="@color/com_facebook_button_background_color_disabled"
            android:theme="@style/TextInputLayoutAppearance"
            app:boxStrokeColor="@color/black">

            <EditText
                android:id="@+id/salePrice"
                style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:inputType="textEmailAddress"
                android:textColor="@color/black" />

        </android.support.design.widget.TextInputLayout>





    </LinearLayout>

</LinearLayout>