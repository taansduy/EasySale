<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFC"
    android:orientation="vertical"
    tools:context=".Activity_of_MoreComponent.Account">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#039BE5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/Back"
                android:layout_weight="2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:layout_weight="10"
                android:textSize="20dp"
                android:text="asdasda"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/Yes"
                android:layout_weight="2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="invisible"
                android:src="@drawable/yes"/>
        </LinearLayout>


    </android.support.v7.widget.Toolbar>
    <TextView
        android:background="#FFFFFF"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:textColor="#A8AAAD"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">
    <EditText
        android:id="@+id/Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Duy Dinh"
        android:textColor="#123"
        android:textSize="25dp" />
    </LinearLayout>
    <TextView
        android:layout_marginLeft="15dp"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:textColor="#A8AAAD"/>

    <EditText
        android:id="@+id/Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:background="#FFFFFF"
        android:editable="false"
        android:text="dinhcongduy1998@yahoo.com.vn"
        android:textColor="#A8AAAD"
        android:textSize="20dp" />
    <TextView
        android:layout_marginLeft="15dp"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số điện thoại"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:textColor="#A8AAAD"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <EditText
            android:id="@+id/PhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="0335406888"
            android:textColor="#123"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:layout_marginLeft="15dp"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Địa chỉ"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:textColor="#A8AAAD"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">
    <EditText
        android:id="@+id/Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Ho Chi Minh"
        android:textColor="#123"
        android:textSize="20dp" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/changepass"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button_more"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:clickable="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Thay đổi mật khẩu"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#F4511E"/>
    </LinearLayout>


</LinearLayout>